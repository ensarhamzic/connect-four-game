<Window x:Class="connect_four_game.NamesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:connect_four_game"
        mc:Ignorable="d"
        Title="Enter Player Names" Height="250" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label FontSize="20">First Player Name:</Label>
            <TextBox x:Name="FPName" FontSize="20" Width="150" />
            <Label FontSize="20">Second Player Name:</Label>
            <TextBox x:Name="SPName" FontSize="20" Width="150"/>
            <Button x:Name="SubmitNamesButton" Click="SubmitNamesButton_Click" FontSize="18" Content="Submit Names" Margin="0,15,0,0" Padding="0,10,0,10"/>
        </StackPanel>
    </Grid>
</Window>
